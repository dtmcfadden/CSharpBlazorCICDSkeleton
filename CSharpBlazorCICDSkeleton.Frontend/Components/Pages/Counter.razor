@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p aria-label="Current count" role="status">Current count: @currentCount</p>

<button aria-label="Click Me" class="btn btn-primary" @onclick="IncrementCount">Click Me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
